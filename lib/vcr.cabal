  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  other-modules:
    TestCommon
    , DiskTest
    , VcrTest
  build-depends:
    base < 5
    , vcr
    , unliftio
    , exceptions
