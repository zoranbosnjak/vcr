build-type:          Simple
extra-source-files:  CHANGELOG.md

executable vcr
  main-is:             Main.hs
  other-modules:
    CmdCustom
    CmdCapture
    CmdServer
    CmdCat
  -- other-extensions:
  hs-source-dirs:      vcr-app
  default-language:    Haskell2010
  ghc-options:
    -O2 -rtsopts -funbox-strict-fields -with-rtsopts=-T -threaded
    -Wall
    -Wincomplete-uni-patterns
    -Wincomplete-record-updates
    -Wcompat
    -Widentities
    -Wredundant-constraints
    -Wpartial-fields
  build-depends:
    base < 5
    , vcr
    , unliftio
    , exceptions
    , template-haskell
    , process
    , temporary
    , optparse-applicative
    , filepath
    , directory
    , unix
    , transformers
    , stm
    , uuid
    , containers
    , text
    , bytestring
    , network
    , wai
    , warp
    , http-types
    , aeson
    , aeson-pretty
    , pipes
    , pipes-concurrency
    , pipes-safe
    , time
    , ekg

