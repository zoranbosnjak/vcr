    default-language:   Haskell2010
    hs-source-dirs:     src
    main-is:            Main.hs
    ghc-options:        -O2 -Wall -rtsopts -funbox-strict-fields -threaded
    default-extensions: StrictData
    build-depends:
        vcr
        , base < 5
        , text
        , directory
        , filepath
        , uuid
