    default-language:   Haskell2010
    hs-source-dirs:     src
    main-is:            Main.hs
    ghc-options:        -O2 -Wall -rtsopts -funbox-strict-fields
    default-extensions: StrictData
    build-depends:
        base >=4.9 && <4.10
        , transformers == 0.5.*
        , directory >=1.2 && <1.4
        , filepath == 1.4.*
