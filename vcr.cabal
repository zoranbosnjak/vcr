    ghc-options:        -O2 -Wall -rtsopts -funbox-strict-fields
    default-extensions: StrictData
    build-depends:
        vcr
        , base
        , cereal
        , aeson
        , bytestring
        , time
        , HUnit
        , QuickCheck
        , test-framework
        , test-framework-hunit
